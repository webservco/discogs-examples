{
    "name" : "webservco/discogs-examples",
    "type" : "project",
    "description" : "Discogs libraries implementation examples.",
    "keywords" : [
        "webservco",
        "discogs"
    ],
    "homepage" : "https://github.com/webservco/discogs-examples",
    "license" : "MIT",
    "authors" : [
        {
            "name" : "Radu Maier",
            "email" : "ariademur@webserv.co"
        }
    ],
    "require" : {
        "php" : "^5.4 || ^7.0",
        "webservco/framework" : "@dev",
        "webservco/discogs-auth" : "@dev",
        "webservco/discogs-api" : "@dev"
    },
    "require-dev" : {
        "phpunit/phpunit" : "~4|~5"
    },
    "suggest" : {
        "pds/skeleton" : "A standard filesystem skeleton suitable for all PHP packages.",
        "squizlabs/php_codesniffer" : "Detects violations of a defined set of coding standards.",
        "phpstan/phpstan" : "PHP Static Analysis Tool, when using PHP 7.x"
    },
    "autoload" : {
        "psr-4" : {
            "Project\\" : "src/",
            "Tests\\" : "tests/unit/"
        }
    },
    "scripts" : {
        "test" : "vendor/bin/phpunit --colors=always",
        "test:d" : "vendor/bin/phpunit --testdox",
        "check:structure" : "pds-skeleton validate .",
        "check" : "phpcs --standard=PSR2 --extensions=php config public src tests",
        "s:7": "phpstan analyse src tests --level=7 --ansi -c phpstan.neon",
        "all": "clear && composer s:7 && composer check && composer test",
        "check:devel": "grep -rnF 'XXX' config public resources src"
    }
}
