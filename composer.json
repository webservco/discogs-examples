{
    "name" : "webservco/discogs-examples",
    "type" : "project",
    "description" : "Discogs libraries implementation examples.",
    "keywords" : [
        "webservco",
        "discogs"
    ],
    "homepage" : "https://github.com/webservco/discogs-examples",
    "license" : "MIT",
    "authors" : [
        {
            "name" : "Radu Maier",
            "email" : "ariademur@webserv.co"
        }
    ],
    "require" : {
        "php" : "^7.4",
        "webservco/api" : "v2.x-dev",
        "webservco/discogs-api" : "v1.x-dev",
        "webservco/discogs-auth" : "v1.x-dev",
        "webservco/framework" : "v10.x-dev"
    },
    "require-dev" : {
        "phpunit/phpunit" : "~9",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "slevomat/coding-standard": "^6.4"
    },
    "suggest" : {
        "pds/skeleton" : "A standard filesystem skeleton suitable for all PHP packages.",
        "squizlabs/php_codesniffer" : "Detects violations of a defined set of coding standards.",
        "phpstan/phpstan" : "PHP Static Analysis Tool, when using PHP 7.x"
    },
    "autoload" : {
        "psr-4" : {
            "Project\\" : "src/",
            "Tests\\" : "tests/unit/"
        }
    },
    "scripts" : {
        "all": "clear && composer s:5 && composer check && composer test",
        "check" : "phpcs --standard=PSR2 --extensions=php -sp config public src tests",
        "check:devel": "grep -rnF 'XXX' config public resources src",
        "check:structure" : "pds-skeleton validate .",
        "s:5": "phpstan analyse src tests --level=5 --ansi -c phpstan.neon",
        "s:6": "phpstan analyse src tests --level=6 --ansi -c phpstan.neon",
        "s:7": "phpstan analyse src tests --level=7 --ansi -c phpstan.neon",
        "s:8": "phpstan analyse src tests --level=8 --ansi -c phpstan.neon",
        "test" : "vendor/bin/phpunit --colors=always",
        "test:d" : "vendor/bin/phpunit --testdox"
    }
}
